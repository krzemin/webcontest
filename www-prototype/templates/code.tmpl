<h2>Code</h2>
<div class="span12">
  <div class="container">
    <div class="row">
  
      <div class="btn-toolbar">
        <button class="btn" id="save" data-loading-text="Saving...">
          <i class="icon-hdd"></i> Save
        </button>
        <button class="btn" id="compile" data-loading-text="Compiling...">
          <i class="icon-cog"></i> Compile
        </button>
        {{!<button class="btn" id="test"><i class="icon-check"></i> Test</button>}}
        <button class="btn btn-primary" id="submit" data-loading-text="Submitting...">
          <i class="icon-upload"></i> Submit
        </button>
        <button class="btn pull-right" id="fullscreen"><i class="icon-fullscreen"></i> Fulscreen</button>
      </div>
    </div>

    <div class="row" id="code-alert-container"></div>
    
    <section class="row" id="code-editor">
      <textarea id="codemirror">{{text}}</textarea>
    </section>
  
    <section class="row" id="code-messages">
      <a nohref id="toggle-messages">Show/Hide messages</a>
      <pre id="messages" class="pre-scrollable" style="display:none"></pre>
    </section>
  </div>
</div>