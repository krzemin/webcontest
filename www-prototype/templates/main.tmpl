<section id="problem">
	<h1>{{problem.name}}</h1>
	<div class="pull-right">
		<dl class="dl-horizontal">
		  <dt>Time limit</dt>
		  <dd>{{problem.limits.time}}</dd>
		  <dt>Memory limit</dt>
		  <dd>{{problem.limits.memory}}</dd>
		</dl>
	</div>
	{{{problem.content}}}
	<section id="input">
	<h3>Input</h3>
	{{{problem.input}}}
	</section>
	<section id="output">
	<h3>Output</h3>
	{{{problem.output}}}
	</section>
	<section id="examples">
	<h3>Examples</h3>
	<div class="container">
		{{#each problem.examples}}
		<h4>{{name}}</h4>
		<div class="row">
		  <div class="span6">
		  	<h5>Sample input</h5>
		  	<pre class="pre-scrollable">{{input}}</pre>
		  </div>
		  <div class="span6">
		  	<h5>Sample output</h5>
		  	<pre class="pre-scrollable">{{output}}</pre>
		  </div>
		</div>
		{{#if explanation}}
		<p>{{explanation}}</p>
		{{/if}}
		{{/each}}
	</div>
	</section>
</section>
<section id="code">
	<h2>Code</h2>
	<div class="btn-toolbar">
	    <button class="btn"><i class="icon-hdd"></i> Save</button>
	    <button class="btn"><i class="icon-cog"></i> Compile</button>
	    {{!<button class="btn"><i class="icon-check"></i> Test</button>}}
	    <button class="btn btn-primary"><i class="icon-upload"></i> Submit</button>
	    <button class="btn pull-right" id="fullscreen"><i class="icon-fullscreen"></i> Fulscreen</button>
	</div>
	<section id="code-editor">
		<textarea id="codemirror">{{code.text}}</textarea>
	</section>
	<section id="code-messages">
		<a nohref id="toggle-messages">Show/Hide messages</a>
		<pre id="messages" class="pre-scrollable">Saving code...</pre>
	</section>
</section>
<section id="submissions">
	<h2>Submissions</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Submission</th>
          <th>Status</th>
          <th>Performance</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
      	{{#each submissions}}
      	<tr data-id="{{id}}">
          <td><a nohref="">{{timestamp}}</a></td>
          <td>{{submission_status this}}</td>
          <td>
          	{{#if performance.time}}
        		<i class="icon-time"></i> {{performance.time}} &nbsp;
        	{{/if}}
        	{{#if performance.memory}}
          		<i class="icon-tasks"></i> {{performance.memory}}
          	{{/if}}
          </td>
          <td>{{score}}</td>
        </tr>
      	{{/each}}
      </tbody>
    </table>
</section>
<section id="ranking">
	<h2>Ranking</h2>
	<table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Score</th>
          {{#each ranking.problems}}
          	<th>{{this}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
      	{{#each ranking.board}}
      	<tr>
      		<td>{{no}}</td>
      		<td>{{name}}</td>
      		<td>{{score}}</td>
      		{{#each problems}}
          		<td>{{this}}</td>
          	{{/each}}
      	</tr>
      	{{/each}}
     </tbody>
    </table>
</section>